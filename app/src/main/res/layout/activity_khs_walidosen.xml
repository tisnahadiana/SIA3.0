<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walidosen.khs.KhsWalidosenActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFDBDB"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFDBDB"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackDMWaldos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="200dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D30D1E8F"
                    android:drawableLeft="@drawable/ic_arrow_back"
                    android:gravity="left"
                    android:insetBottom="12dp"
                    android:onClick="moveDashboardKHSWaldos"
                    android:text="Kembali"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="15sp"
                    android:gravity="center"
                    android:text="KHS Mahasiswa"
                    android:textColor="#121111"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/txtProdiWaldos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="15sp"
                        android:gravity="left"
                        android:text="Prodi"
                        android:textColor="#121111"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prodiKHSWD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="15sp"
                        android:gravity="left"
                        android:text="nama prodi"
                        android:textColor="#121111"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSemester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="15sp"
                        android:gravity="left"
                        android:text="Semester"
                        android:textColor="#121111"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/semesterKHSWD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="15sp"
                        android:gravity="left"
                        android:text="No semester"
                        android:textColor="#121111"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txtNIDNkhs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="nim"
                    android:textSize="3sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtNamaWaldosKhs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="nama"
                    android:textSize="3sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtProdiWaldosKHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="prodi"
                    android:textSize="3sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtSemesterWaldosKHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="semester"
                    android:textSize="3sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtImageUrlkhsWaldos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="nama"
                    android:textSize="3sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="#FAF6F6"
                    app:cardCornerRadius="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ListView
                                android:id="@+id/listViewKhsMHSWD"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--        <LinearLayout-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_gravity="center"-->
            <!--            android:gravity="center"-->
            <!--            android:orientation="vertical">-->

            <!--            <Button-->
            <!--                android:id="@+id/btnDownloadKHS"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:backgroundTint="#D30D1E8F"-->
            <!--                android:gravity="center"-->
            <!--                android:text="Download"-->
            <!--                android:textStyle="bold" />-->
            <!--        </LinearLayout>-->

        </LinearLayout>


    </ScrollView>


</RelativeLayout>