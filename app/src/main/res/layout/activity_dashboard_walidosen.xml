<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".walidosen.DashboardWalidosenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1EEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progressBar5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:progressTint="#0E0D0D" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="200dp"
                            android:layout_weight="1"
                            android:foregroundGravity="left"
                            app:srcCompat="@drawable/ic_sia_blue" />

                        <Button
                            android:id="@+id/btnKeluarWaldos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:backgroundTint="#D30D1E8F"
                            android:insetBottom="15dp"
                            android:text="Keluar"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:cornerRadius="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:background="#2196F3"
                            android:foregroundGravity="center"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="#2196F3"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/ProfileImageWaldos"
                                        android:layout_width="186dp"
                                        android:layout_height="74dp"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="24dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_image_menu_circle_24" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:foregroundGravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16sp"
                                        android:gravity="left"
                                        android:text="Welcome Wali dosen"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtNamaDashboardWaldos"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8sp"
                                        android:layout_marginBottom="3sp"
                                        android:drawableLeft="@drawable/ic_account_nama_24"
                                        android:text="Nama"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtNIDN"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10sp"
                                        android:drawableLeft="@drawable/ic_hourglass_full_24"
                                        android:text="NIDN"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btnUploadWaldos"
                                        style="@style/Widget.AppCompat.Button.Borderless"
                                        android:layout_width="46dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:drawableRight="@drawable/ic_edit_white"
                                        android:gravity="right"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtProdiWaldosDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="prodi"
                            android:textSize="10sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/txtSemesterWaldosDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="semester"
                            android:textSize="10sp"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_waldos_mahasiswa"
                                    android:layout_width="150dp"
                                    android:layout_height="170dp"
                                    android:layout_marginLeft="20dp"
                                    app:cardCornerRadius="20dp"
                                    android:onClick="MoveUserDataMahasiswaDashboard">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|top"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imgWaldosMahasiswa"
                                            android:layout_width="130dp"
                                            android:layout_height="120dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginTop="8dp"
                                            app:srcCompat="@drawable/ic_mahasiswa"
                                            tools:srcCompat="@drawable/ic_mahasiswa" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="bottom|center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtWaldosmahasiwa"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5sp"
                                            android:layout_marginBottom="8sp"
                                            android:fontFamily="sans-serif-condensed-medium"
                                            android:gravity="bottom|center"
                                            android:text="Mahasiswa"
                                            android:textColor="#000000"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_waldos_krs"
                                    android:layout_width="150dp"
                                    android:layout_height="170dp"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="30dp"
                                    app:cardCornerRadius="20dp"
                                    android:onClick="MoveKrsDashboard">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|top"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imgWaldosKrs"
                                            android:layout_width="130dp"
                                            android:layout_height="120dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginTop="12dp"
                                            app:srcCompat="@drawable/ic_krs"
                                            tools:srcCompat="@drawable/ic_krs" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="bottom|center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textViewKRSwaldos"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8sp"
                                            android:fontFamily="sans-serif-condensed-medium"
                                            android:gravity="bottom|center"
                                            android:text="KRS"
                                            android:textColor="#000000"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_waldos_khs"
                                    android:layout_width="150dp"
                                    android:layout_height="170dp"
                                    android:layout_marginLeft="20dp"
                                    app:cardCornerRadius="20dp"
                                    android:onClick="MoveKhsDashboard">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|top"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imgWaldosKHS"
                                            android:layout_width="130dp"
                                            android:layout_height="120dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginTop="8dp"
                                            app:srcCompat="@drawable/ic_khs"
                                            tools:srcCompat="@drawable/ic_khs" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="bottom|center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtWaldosKHS"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5sp"
                                            android:layout_marginBottom="8sp"
                                            android:fontFamily="sans-serif-condensed-medium"
                                            android:gravity="bottom|center"
                                            android:text="KHS"
                                            android:textColor="#000000"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_tn"
                                        android:layout_width="150dp"
                                        android:layout_height="170dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginBottom="50dp"
                                        android:onClick="MoveTnilaiDashboard"
                                        app:cardCornerRadius="20dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|top"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/imageViewTN"
                                                android:layout_width="130dp"
                                                android:layout_height="120dp"
                                                android:layout_gravity="center|top"
                                                android:layout_marginTop="12dp"
                                                app:srcCompat="@drawable/ic_nilai"
                                                tools:srcCompat="@drawable/ic_nilai" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:gravity="bottom|center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/txtTNilai"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5sp"
                                                android:layout_marginBottom="8sp"
                                                android:fontFamily="sans-serif-condensed-medium"
                                                android:gravity="bottom|center"
                                                android:text="Transkrip Nilai"
                                                android:textColor="#000000"
                                                android:textSize="20sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>