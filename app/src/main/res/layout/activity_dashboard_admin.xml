<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#C6C5C5"
    tools:context=".admin.DashboardAdminActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#F1EEEE"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1EEEE"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="8dp"
              android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:progressTint="#0E0D0D" />


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="200dp"
                android:layout_weight="1"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/ic_sia_blue" />

            <Button
                android:id="@+id/btnKeluarAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="#D30D1E8F"
                android:insetBottom="15dp"
                android:text="Keluar"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="#2196F3"
                android:foregroundGravity="center"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:background="#2196F3"
                  android:gravity="center"
                  android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/ProfileImageAdmin"
                      android:layout_width="186dp"
                      android:layout_height="74dp"
                      android:layout_gravity="center|left"
                      android:layout_marginLeft="24dp"
                      android:layout_weight="1"
                      android:src="@drawable/ic_image_menu_circle_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:foregroundGravity="right"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/textView13"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16sp"
                      android:gravity="left"
                      android:text="Welcome Admin"
                      android:textColor="#FFFFFF"
                      android:textSize="16sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/txtNamaDashboardAdmin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8sp"
                      android:layout_marginBottom="3sp"
                      android:drawableLeft="@drawable/ic_account_nama_24"
                      android:text="Nama"
                      android:textAlignment="textStart"
                      android:textColor="#FFFFFF"
                      android:textSize="16sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/txtIdAdmin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10sp"
                      android:drawableLeft="@drawable/ic_hourglass_full_24"
                      android:text="ID_ADMIN"
                      android:textColor="#FFFFFF"
                      android:textSize="16sp"
                      android:textStyle="bold" />

                  <Button
                      android:id="@+id/btnUploadPhotoAdmin"
                      style="@style/Widget.AppCompat.Button.Borderless"
                      android:layout_width="46dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:drawableRight="@drawable/ic_edit_white"
                      android:gravity="right"
                      android:visibility="visible" />

                </LinearLayout>

              </LinearLayout>
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_admin"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_marginLeft="20dp"
                  android:onClick="MoveUserDataUserAdmin"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/imageView3"
                      android:layout_width="130dp"
                      android:layout_height="140dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="8dp"
                      app:srcCompat="@drawable/ic_admin"
                      tools:srcCompat="@drawable/ic_admin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/textView22"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5sp"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="Admin"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_waldos"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_gravity="right"
                  android:layout_marginLeft="30dp"
                  android:onClick="MoveUserDataUserWD"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/immgWalidosen"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="12dp"
                      app:srcCompat="@drawable/ic_walidosen"
                      tools:srcCompat="@drawable/ic_walidosen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/textViewWaldos"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="Wali Dosen"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>


          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_mahasiswa"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_marginLeft="20dp"
                  android:onClick="MoveUserDataMahasiswa"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/imageViewMahasiswa"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="8dp"
                      app:srcCompat="@drawable/ic_mahasiswa"
                      tools:srcCompat="@drawable/ic_mahasiswa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/txtmahasiwa"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5sp"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="Mahasiswa"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_krs"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_gravity="right"
                  android:layout_marginLeft="30dp"
                  android:onClick="MoveUserDatakrs"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/immgKRS"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="12dp"
                      app:srcCompat="@drawable/ic_krs"
                      tools:srcCompat="@drawable/ic_krs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/textViewKRS"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="KRS"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>


          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_khs"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_marginLeft="20dp"
                  android:onClick="MoveUserDatakhs"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/imageViewKHS"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="8dp"
                      app:srcCompat="@drawable/ic_khs"
                      tools:srcCompat="@drawable/ic_khs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/txtKhs"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5sp"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="KHS"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_matkul"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_gravity="right"
                  android:layout_marginLeft="30dp"
                  android:onClick="MoveUserDataMatkul"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/immgMatkul"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="12dp"
                      app:srcCompat="@drawable/ic_matkul"
                      tools:srcCompat="@drawable/ic_matkul" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/textViewMatkul"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="Mata Kuliah"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>


          </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_tn"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  android:layout_marginLeft="20dp"
                  android:onClick="MoveUserDataTnilai"
                  app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/imageViewTN"
                      android:layout_width="130dp"
                      android:layout_height="120dp"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="12dp"
                      app:srcCompat="@drawable/ic_nilai"
                      tools:srcCompat="@drawable/ic_nilai" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/txtTNilai"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5sp"
                      android:layout_marginBottom="8sp"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:gravity="bottom|center"
                      android:text="Transkrip Nilai"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

              </androidx.cardview.widget.CardView>
            </LinearLayout>


          </LinearLayout>


        </LinearLayout>


      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</RelativeLayout>